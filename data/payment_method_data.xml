<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Ödeme Yöntemleri -->
        <record id="payment_method_credit_card" model="payment.method">
            <field name="name">Kredi Kartı</field>
            <field name="code">credit_card</field>
            <field name="sequence">10</field>
            <field name="active">True</field>
        </record>

        <record id="payment_method_debit_card" model="payment.method">
            <field name="name">Banka Kartı</field>
            <field name="code">debit_card</field>
            <field name="sequence">20</field>
            <field name="active">True</field>
        </record>

        <record id="payment_method_prepaid_card" model="payment.method">
            <field name="name">Ön Ödemeli Kart</field>
            <field name="code">prepaid_card</field>
            <field name="sequence">30</field>
            <field name="active">True</field>
        </record>

        <!-- 3D Secure Yöntemleri -->
        <record id="payment_method_3d_secure" model="payment.method">
            <field name="name">3D Secure</field>
            <field name="code">3d_secure</field>
            <field name="sequence">40</field>
            <field name="active">True</field>
        </record>

        <record id="payment_method_3d_pay" model="payment.method">
            <field name="name">3D Pay</field>
            <field name="code">3d_pay</field>
            <field name="sequence">50</field>
            <field name="active">True</field>
        </record>

        <record id="payment_method_non_secure" model="payment.method">
            <field name="name">Non-Secure</field>
            <field name="code">non_secure</field>
            <field name="sequence">60</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
