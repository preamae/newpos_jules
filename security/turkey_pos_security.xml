<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- POS Grupları -->
        <record id="group_pos_user" model="res.groups">
            <field name="name">POS Kullanıcı</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_pos_manager" model="res.groups">
            <field name="name">POS Yönetici</field>
            <field name="implied_ids" eval="[(4, ref('turkey_pos_payment.group_pos_user'))]"/>
        </record>

        <record id="group_pos_admin" model="res.groups">
            <field name="name">POS Admin</field>
            <field name="implied_ids" eval="[(4, ref('turkey_pos_payment.group_pos_manager'))]"/>
        </record>

        <!-- POS Sipariş Şirket Kuralı -->
        <record id="pos_order_rule_company" model="ir.rule">
            <field name="name">POS Sipariş Şirket Kuralı</field>
            <field name="model_id" ref="turkey_pos_payment.model_pos_order"/>
            <field name="domain_force">['|', ('transaction_id.company_id', '=', False), ('transaction_id.company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
