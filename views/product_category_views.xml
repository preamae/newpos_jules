<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Ürün Kategorisi Form Görünümü -->
        <record id="view_product_category_form_turkey_pos" model="ir.ui.view">
            <field name="name">product.category.form.turkey.pos</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page string="Taksit Ayarları">
                            <group>
                                <group>
                                    <field name="allow_installments"/>
                                    <field name="max_installment_count"/>
                                    <field name="min_amount_for_installment"/>
                                </group>
                                <group>
                                    <field name="commission_type"/>
                                    <field name="default_commission_rate"/>
                                </group>
                            </group>
                            <field name="installment_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="installment_option_id"/>
                                    <field name="provider_id"/>
                                    <field name="custom_commission_rate"/>
                                    <field name="is_active"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Banka Taksitleri">
                            <field name="bank_installment_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="provider_id"/>
                                    <field name="installment_count"/>
                                    <field name="commission_rate"/>
                                    <field name="interest_rate"/>
                                    <field name="min_amount"/>
                                    <field name="max_amount"/>
                                    <field name="is_active"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Kampanyalar">
                            <field name="campaign_installment_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="provider_id"/>
                                    <field name="installment_count"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="is_active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

        <!-- Ürün Kategorisi Ağaç Görünümü -->
        <record id="view_product_category_tree_turkey_pos" model="ir.ui.view">
            <field name="name">product.category.tree.turkey.pos</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_list_view"/>
            <field name="arch" type="xml">
                <field name="display_name" position="after">
                    <field name="allow_installments" optional="show"/>
                    <field name="max_installment_count" optional="show"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
