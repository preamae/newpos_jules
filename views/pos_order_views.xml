<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- POS Sipariş Form Görünümü -->
        <record id="view_pos_order_form" model="ir.ui.view">
            <field name="name">pos.order.form</field>
            <field name="model">pos.order</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" string="Onayla" type="object" 
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_complete" string="Tamamla" type="object" 
                                class="oe_highlight" invisible="state not in ['pending', 'authorized']"/>
                        <button name="action_refund" string="İade Et" type="object" 
                                invisible="state != 'done'"/>
                        <button name="action_cancel" string="İptal Et" type="object" 
                                invisible="state not in ['draft', 'pending', 'authorized']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,pending,authorized,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_transaction" type="object" 
                                    class="oe_stat_button" icon="fa-credit-card">
                                <span class="o_stat_text">İşlem</span>
                            </button>
                            <button name="action_view_invoice" type="object" 
                                    class="oe_stat_button" icon="fa-file-text-o"
                                    invisible="not invoice_id">
                                <span class="o_stat_text">Fatura</span>
                            </button>
                            <button name="action_view_sale_order" type="object" 
                                    class="oe_stat_button" icon="fa-shopping-cart"
                                    invisible="not sale_order_id">
                                <span class="o_stat_text">Sipariş</span>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="transaction_id"/>
                                <field name="provider_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="sale_order_id"/>
                                <field name="invoice_id"/>
                            </group>
                            <group>
                                <field name="amount" readonly="1"/>
                                <field name="currency_id" readonly="1"/>
                                <field name="date" readonly="1"/>
                                <field name="payment_date" readonly="1"/>
                            </group>
                        </group>
                        <group string="POS Bilgileri">
                            <group>
                                <field name="pos_order_id" readonly="1"/>
                                <field name="pos_transaction_id" readonly="1"/>
                                <field name="pos_auth_code" readonly="1"/>
                            </group>
                            <group>
                                <field name="installment_count" readonly="1"/>
                                <field name="installment_amount" readonly="1"/>
                                <field name="is_3d_secure" readonly="1"/>
                            </group>
                        </group>
                        <group string="İade/İptal Bilgileri">
                            <group>
                                <field name="is_refunded" readonly="1"/>
                                <field name="refund_amount" readonly="1"/>
                                <field name="refund_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="is_cancelled" readonly="1"/>
                                <field name="cancel_date" readonly="1"/>
                            </group>
                        </group>
                        <field name="note" placeholder="Not..."/>
                        <field name="internal_note" placeholder="Dahili not..."/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- POS Sipariş Ağaç Görünümü -->
        <record id="view_pos_order_tree" model="ir.ui.view">
            <field name="name">pos.order.tree</field>
            <field name="model">pos.order</field>
            <field name="arch" type="xml">
                <tree decoration-muted="state == 'cancelled'" 
                      decoration-success="state == 'done'"
                      decoration-info="state == 'pending'"
                      decoration-danger="state == 'failed'">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="provider_id"/>
                    <field name="amount"/>
                    <field name="installment_count"/>
                    <field name="state"/>
                    <field name="is_refunded"/>
                    <field name="is_cancelled"/>
                </tree>
            </field>
        </record>

        <!-- POS Sipariş Filtre -->
        <record id="view_pos_order_search" model="ir.ui.view">
            <field name="name">pos.order.search</field>
            <field name="model">pos.order</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="pos_order_id"/>
                    <field name="partner_id"/>
                    <field name="provider_id"/>
                    <filter string="Taslak" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Bekliyor" name="pending" domain="[('state', '=', 'pending')]"/>
                    <filter string="Onaylandı" name="authorized" domain="[('state', '=', 'authorized')]"/>
                    <filter string="Tamamlandı" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="İade Edildi" name="refunded" domain="[('state', '=', 'refunded')]"/>
                    <filter string="Kısmi İade" name="partial_refunded" domain="[('state', '=', 'partial_refunded')]"/>
                    <filter string="İptal Edildi" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Bugün" name="today" domain="[('date', '>=', datetime.datetime.now().strftime('%Y-%m-%d'))]"/>
                    <filter string="Bu Hafta" name="this_week" domain="[('date', '>=', (datetime.datetime.now() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    <filter string="Bu Ay" name="this_month" domain="[('date', '>=', datetime.datetime.now().strftime('%Y-%m-01'))]"/>
                    <group expand="0" string="Grupla">
                        <filter string="Durum" name="group_by_state" context="{'group_by': 'state'}"/>
                        <filter string="Sağlayıcı" name="group_by_provider" context="{'group_by': 'provider_id'}"/>
                        <filter string="Müşteri" name="group_by_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Tarih" name="group_by_date" context="{'group_by': 'date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- POS Sipariş Eylem -->
        <record id="action_pos_order" model="ir.actions.act_window">
            <field name="name">POS Siparişleri</field>
            <field name="res_model">pos.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- POS Sipariş Dashboard Eylem -->
        <record id="action_pos_order_dashboard" model="ir.actions.act_window">
            <field name="name">POS Dashboard</field>
            <field name="res_model">pos.order</field>
            <field name="view_mode">tree,form,graph,pivot</field>
            <field name="context">{'search_default_today': 1}</field>
        </record>

        <!-- POS Mutabakat Form Görünümü -->
        <record id="view_pos_reconciliation_form" model="ir.ui.view">
            <field name="name">pos.reconciliation.form</field>
            <field name="model">pos.reconciliation</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_load_transactions" string="İşlemleri Yükle" 
                                type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_confirm" string="Onayla" 
                                type="object" class="oe_highlight" invisible="state not in ['draft', 'in_progress']"/>
                        <button name="action_cancel" string="İptal Et" 
                                type="object" invisible="state not in ['draft', 'in_progress']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="provider_id"/>
                            </group>
                            <group>
                                <field name="total_transaction_count" readonly="1"/>
                                <field name="total_amount" readonly="1"/>
                                <field name="total_commission" readonly="1"/>
                                <field name="net_amount" readonly="1"/>
                                <field name="currency_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Siparişler">
                                <field name="order_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="date"/>
                                        <field name="amount"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="İşlemler">
                                <field name="transaction_ids" readonly="1">
                                    <tree>
                                        <field name="reference"/>
                                        <field name="amount"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- POS Mutabakat Ağaç Görünümü -->
        <record id="view_pos_reconciliation_tree" model="ir.ui.view">
            <field name="name">pos.reconciliation.tree</field>
            <field name="model">pos.reconciliation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="provider_id"/>
                    <field name="total_transaction_count"/>
                    <field name="net_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- POS Mutabakat Eylem -->
        <record id="action_pos_reconciliation" model="ir.actions.act_window">
            <field name="name">POS Mutabakat</field>
            <field name="res_model">pos.reconciliation</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menü Öğeleri -->
        <menuitem id="menu_pos_order_root" 
                  name="POS İşlemleri"
                  parent="menu_turkey_pos_root"
                  sequence="20"/>

        <menuitem id="menu_pos_order" 
                  name="Siparişler"
                  parent="menu_pos_order_root"
                  action="action_pos_order"
                  sequence="10"/>

        <menuitem id="menu_pos_order_dashboard" 
                  name="Dashboard"
                  parent="menu_pos_order_root"
                  action="action_pos_order_dashboard"
                  sequence="5"/>

        <menuitem id="menu_pos_reconciliation" 
                  name="Mutabakat"
                  parent="menu_pos_order_root"
                  action="action_pos_reconciliation"
                  sequence="20"/>
    </data>
</odoo>
