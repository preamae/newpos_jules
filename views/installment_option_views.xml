<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Taksit Seçeneği Form Görünümü -->
        <record id="view_installment_option_form" model="ir.ui.view">
            <field name="name">installment.option.form</field>
            <field name="model">installment.option</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Temel Bilgiler">
                                <field name="provider_id"/>
                                <field name="gateway_type" readonly="1"/>
                                <field name="installment_count"/>
                                <field name="is_active"/>
                            </group>
                            <group string="Komisyon Oranları">
                                <field name="commission_rate"/>
                                <field name="interest_rate"/>
                                <field name="commission_amount" readonly="1"/>
                            </group>
                            <group string="Tutar Sınırları">
                                <field name="min_amount"/>
                                <field name="max_amount"/>
                                <field name="currency_id"/>
                            </group>
                        </group>
                        <group string="Açıklama">
                            <field name="description" nolabel="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Taksit Seçeneği Ağaç Görünümü -->
        <record id="view_installment_option_tree" model="ir.ui.view">
            <field name="name">installment.option.tree</field>
            <field name="model">installment.option</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="provider_id"/>
                    <field name="installment_count"/>
                    <field name="commission_rate"/>
                    <field name="interest_rate"/>
                    <field name="min_amount"/>
                    <field name="max_amount"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <!-- Taksit Seçeneği Filtre -->
        <record id="view_installment_option_search" model="ir.ui.view">
            <field name="name">installment.option.search</field>
            <field name="model">installment.option</field>
            <field name="arch" type="xml">
                <search>
                    <field name="provider_id"/>
                    <field name="installment_count"/>
                    <filter string="Aktif" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Pasif" name="inactive" domain="[('is_active', '=', False)]"/>
                    <group expand="0" string="Grupla">
                        <filter string="Sağlayıcı" name="group_by_provider" context="{'group_by': 'provider_id'}"/>
                        <filter string="Taksit Sayısı" name="group_by_count" context="{'group_by': 'installment_count'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Taksit Seçeneği Eylem -->
        <record id="action_installment_option" model="ir.actions.act_window">
            <field name="name">Taksit Seçenekleri</field>
            <field name="res_model">installment.option</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Kategori Taksit Form Görünümü -->
        <record id="view_product_category_installment_form" model="ir.ui.view">
            <field name="name">product.category.installment.form</field>
            <field name="model">product.category.installment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="category_id"/>
                            <field name="installment_option_id"/>
                            <field name="provider_id" readonly="1"/>
                            <field name="sequence"/>
                            <field name="is_active"/>
                        </group>
                        <group string="Özel Ayarlar">
                            <field name="custom_commission_rate"/>
                            <field name="custom_min_amount"/>
                            <field name="currency_id" readonly="1"/>
                        </group>
                        <field name="note"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Kategori Taksit Ağaç Görünümü -->
        <record id="view_product_category_installment_tree" model="ir.ui.view">
            <field name="name">product.category.installment.tree</field>
            <field name="model">product.category.installment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="category_id"/>
                    <field name="installment_option_id"/>
                    <field name="provider_id"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <!-- Kategori Taksit Eylem -->
        <record id="action_product_category_installment" model="ir.actions.act_window">
            <field name="name">Kategori Taksit Tanımları</field>
            <field name="res_model">product.category.installment</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Banka Taksit Form Görünümü -->
        <record id="view_product_category_bank_installment_form" model="ir.ui.view">
            <field name="name">product.category.bank.installment.form</field>
            <field name="model">product.category.bank.installment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="category_id"/>
                                <field name="provider_id"/>
                                <field name="installment_count"/>
                                <field name="sequence"/>
                                <field name="is_active"/>
                            </group>
                            <group>
                                <field name="commission_rate"/>
                                <field name="interest_rate"/>
                                <field name="min_amount"/>
                                <field name="max_amount"/>
                                <field name="currency_id" readonly="1"/>
                            </group>
                        </group>
                        <field name="note"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Banka Taksit Ağaç Görünümü -->
        <record id="view_product_category_bank_installment_tree" model="ir.ui.view">
            <field name="name">product.category.bank.installment.tree</field>
            <field name="model">product.category.bank.installment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="category_id"/>
                    <field name="provider_id"/>
                    <field name="installment_count"/>
                    <field name="commission_rate"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <!-- Banka Taksit Eylem -->
        <record id="action_product_category_bank_installment" model="ir.actions.act_window">
            <field name="name">Banka Bazlı Taksitler</field>
            <field name="res_model">product.category.bank.installment</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Kampanya Form Görünümü -->
        <record id="view_product_category_campaign_form" model="ir.ui.view">
            <field name="name">product.category.campaign.form</field>
            <field name="model">product.category.campaign</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="category_id"/>
                                <field name="provider_id"/>
                                <field name="installment_count"/>
                                <field name="is_active"/>
                            </group>
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="card_brand_id"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="commission_rate"/>
                                <field name="interest_rate"/>
                            </group>
                            <group>
                                <field name="min_amount"/>
                                <field name="max_amount"/>
                                <field name="currency_id" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Kampanya Ağaç Görünümü -->
        <record id="view_product_category_campaign_tree" model="ir.ui.view">
            <field name="name">product.category.campaign.tree</field>
            <field name="model">product.category.campaign</field>
            <field name="arch" type="xml">
                <tree decoration-muted="is_active == False" decoration-success="date_end &gt;= current_date">
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="provider_id"/>
                    <field name="installment_count"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <!-- Kampanya Eylem -->
        <record id="action_product_category_campaign" model="ir.actions.act_window">
            <field name="name">Kampanya Taksitleri</field>
            <field name="res_model">product.category.campaign</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menü Öğeleri -->
        <menuitem id="menu_installment_root" 
                  name="Taksit Yönetimi"
                  parent="menu_turkey_pos_root"
                  sequence="30"/>

        <menuitem id="menu_installment_option" 
                  name="Taksit Seçenekleri"
                  parent="menu_installment_root"
                  action="action_installment_option"
                  sequence="10"/>

        <menuitem id="menu_product_category_installment" 
                  name="Kategori Taksitleri"
                  parent="menu_installment_root"
                  action="action_product_category_installment"
                  sequence="20"/>

        <menuitem id="menu_product_category_bank_installment" 
                  name="Banka Taksitleri"
                  parent="menu_installment_root"
                  action="action_product_category_bank_installment"
                  sequence="30"/>

        <menuitem id="menu_product_category_campaign" 
                  name="Kampanyalar"
                  parent="menu_installment_root"
                  action="action_product_category_campaign"
                  sequence="40"/>
    </data>
</odoo>
